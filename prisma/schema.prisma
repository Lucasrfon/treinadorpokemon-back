// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Color {
  PINK
  GREEN
  BLUE
  RED
  YELLOW
}

model Pokemon {
  id    Int    @id @default(autoincrement())
  name  String @unique
  color Color
}

model EventCard {
  id   Int    @id @default(autoincrement())
  name String
}

model ItemCard {
  id   Int    @id @default(autoincrement())
  name String
}
